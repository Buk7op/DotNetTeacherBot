@page "/admin/questions/publish/{id:long}"
<h3 class="bg-info text-white text-center p-1">Publish</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@UnpublishedQuestion.ID</td></tr>
        <tr><th>Name</th><td>@UnpublishedQuestion.ShortQuestion</td></tr>
        <tr><th>Description</th><td>@UnpublishedQuestion.Description</td></tr>
        <tr><th>Category</th><td>@UnpublishedQuestion.Answer</td></tr>
    </tbody>
</table>
<NavLink class="btn btn-info" href="@PublishQuestion()">Publish</NavLink>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/questions">Back</NavLink>
@code
{
    [Inject]
    public IQuestionRepo Repository { get; set; }
    [Parameter]
    public long Id { get; set; }
    public Question UnpublishedQuestion { get; set; }
    protected override void OnParametersSet()
    {
        UnpublishedQuestion = Repository.UnpublishedQuestions.FirstOrDefault(p => p.ID == Id);
    }
    public string EditUrl => $"/admin/questions/edit/{UnpublishedQuestion.ID}";
    public Question PublishQuestion()
    {
        Repository.ChangePublish(UnpublishedQuestion);
        return UnpublishedQuestion;
    }
}